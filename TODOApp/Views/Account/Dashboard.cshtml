
@model IEnumerable<Todo>
@{
    ViewData["Title"] = "Dashboard";
}
<div class="my-3 d-flex justify-content-center">
      <a class="btn btn-primary" asp-controller="Account" asp-action="Create">Create new todo</a>
    </div>

<div >
    <form method="post" style="display:flex;flex-wrap:wrap; justify-content:space-between">
        @if(Model.Count() > 0)
        {
            @foreach(var item in Model)
            {
              <div class="card mb-3" style="width: 18rem;">
  <div class="card-body">
    <h5 class="card-title">@item.Title</h5>
    <h6 class="card-subtitle mb-2 text-muted">Description:</h6>
    <p class="card-text">@item.Description.</p>
    <button asp-controller="Account" asp-route-Id="@item.Id" asp-action="Edit" class="btn btn-success btn-sm text-white">Edit</button>
                                <button asp-controller="Account" asp-route-Id="@item.Id" asp-action="Delete"  class="btn btn-danger btn-sm">Delete</button>
  </div>
</div>
            }
            
        }
    </form>
    </div>
